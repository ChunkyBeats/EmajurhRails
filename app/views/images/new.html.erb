<h2>erhmagerd. erplerd an emaje.</h2>

<%= form_for [@image], :url => user_images_path, :html => { :multipart => true } do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div class="field">
    <%= form.file_field :attachment %>
  </div>
  <div class="actions">
    <%= form.submit :'Upload Image' %>
  </div>
<% end %>
